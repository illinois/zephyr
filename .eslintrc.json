{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "handle-callback-err": "error",
        "semi": ["error", "always"],
        "no-console": "off",
        "prefer-const": "error",
        "prefer-template": "error",
        "no-var": "error",
        "quotes": ["error", "single"]
    }
}
